{
  "name": "jest-preview",
  "private": true,
  "version": "0.0.0",
  "main": "dist/index.js",
  "files": [
    "dist",
    "server"
  ],
  "bin": {
    "jest-preview": "./server/previewServer.js"
  },
  "scripts": {
    "dev": "vite",
    "types": "tsc src/index.ts --declaration --emitDeclarationOnly --jsx react --esModuleInterop --outDir dist",
    "build": "tsc -p tsconfig.prod.json && vite build && npm run types",
    "build:watch": "vite build --watch",
    "preview": "vite preview",
    "dom": "nodemon server/previewServer.js",
    "test:only": "npm run clearCache && NODE_ENV=test jest --watch",
    "test:ci": "npm run clearCache && NODE_ENV=test jest",
    "clearCache": "rimraf node_modules/.cache/jest-preview-dom && jest --clearCache",
    "test": "npm-run-all -p dom test:only",
    "prettier": "prettier server src --check",
    "prettier:fix": "npm run prettier -- --write"
  },
  "dependencies": {
    "express": "^4.17.3",
    "npm-run-all": "^4.1.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "@swc/core": "^1.2.154",
    "@swc/jest": "^0.2.20",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.4",
    "@testing-library/user-event": "^13.5.0",
    "@types/react": "^17.0.33",
    "@types/react-dom": "^17.0.10",
    "@vitejs/plugin-react": "^1.0.7",
    "jest": "^27.5.1",
    "jest-watch-typeahead": "^1.0.0",
    "prettier": "^2.6.0",
    "typescript": "^4.5.4",
    "vite": "^2.8.0"
  }
}
